                <%=shirt.title%>
              </h5>
              <div class="star">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <h4> Rs.<%=shirt.price%>
                </h4>
              </div>
              <a id="cart" href="/add-to-cart/<%= shirt._id %>"><i class="fa-solid fa-cart-shopping"></i></a>
            </div>
          </div>
        </a>
        <% }); %>
    </div>
  </section>


