  <section id="hero">
    <div id="hero-div">
      <h4>Trade-in-offer</h4>
      <h2>Super value deals</h2>
      <h1>On all products</h1>
      <p>Save more with coupons & up to 70% off!</p>
      <a href="/shop"><button>Shop Now</button></a>

    </div>
  </section>

  <section id="feature" class="section-p1">
    <div class="fe-box">
      <img src="./assets/shopnow/frreshiping.png" alt="">
      <h6>Free Shipping</h6>
    </div>

    <div class="fe-box">
      <img src="./assets/shopnow/onlineorder.png" alt="">
      <h6>Online Order</h6>
    </div>

    <div class="fe-box">
      <img src="./assets/shopnow/savemoney.jpg" alt="">
      <h6>Save Money</h6>
    </div>

    <div class="fe-box">
      <img src="./assets/shopnow/promotions.jpeg" alt="">
      <h6>Promotions</h6>
    </div>

    <div class="fe-box">
      <img src="./assets/shopnow/happysale.webp" alt="">
      <h6>Happy Sale</h6>
    </div>

    <div class="fe-box">
      <img src="./assets/shopnow/support.jpeg" alt="">
      <h6>Support</h6>
    </div>

  </section>

  <section id="product1" class="section-p1">
    <h2>T-Shirt Collections</h2>
    <p>Summer Collection New Modern Design</p>

    <div class="pro-container">

      <% products.forEach((product)=> { %>
        <a href="/product/<%=product._id%>" style="text-decoration: none; color: inherit;">
          <div class="pro">
            <img src="<%=product.image%>" alt="<%=product.title%>">
            <div class="des">
              <span>
                <%=product.brand%>
              </span>
              <h5>
                <%=product.title%>
              </h5>
              <div class="star">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <h4> Rs.<%=product.price%>
                </h4>
              </div>
              <a id="cart" href="/add-to-cart/<%= product._id %>"><i class="fa-solid fa-cart-shopping"></i></a>
            </div>
          </div>
        </a>
        <% }); %>
    </div>
  </section>



  <section id="banner" class="section-m1">
    <h4>Repair Services</h4>
    <h2>Up to <span>70% Off</span> -All t-Shirts & Accessories</h2>
